<div class="card di center">
  <div class="card-body">
    <br>
    <br>
    <img src="img/man.png">
    <br>
    <br>
    <h5 class="title">Editando publicação</h5>
    <br>
    <br>
    <hr>
    <a href="/admin/excluirpost/{{posts._id}}"><img src="img/excluir.png"></a>
    <small class="">Deletar publicação</small>
    <hr>
    <br>
    <br>
    <form action="/admin/post/edit" method="post">
      <input type="hidden" name="id" value="{{posts._id}}"></input>
      <input type="text" name="data" class="form-control" placeholder="Data de publicação"
        value="{{posts.data}}"></input>
      <br>
      <br>
      <input type="text" name="title" class="form-control" placeholder="Título para ser exibido"
        value="{{posts.titulo}}"></input>
      <br>
      <br>
      <input type="text" name="thumb" class="form-control" placeholder="Imagem de capa" value="{{posts.thumb}}"></input>
      <br>
      <br>
      <textarea name="coment" class="textarea">{{posts.conteudo}}</textarea>
      <br>
      <br>
      <br>
      <button type="submit" class="btn btn-dark">Editar</button>
    </form>
    <br>
    <hr>
  </div>
</div>

<script src="ckeditor/ckeditor.js"></script>
<script>
  CKEDITOR.replace('coment');
  config.htmlEncodeOutput = true;
  var data = CKEDITOR.instances.coment.getData()


</script>

